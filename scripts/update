#!/bin/bash
set -euo pipefail


# ==================================================================
# APPS
# ==================================================================

apps=(
  "Todoist"
  "Calendar"
  "Messages"
  "Mail"
  "Photos"
  "Day One"
  "Anki"
)

for app in "${apps[@]}"; do
  open -a "$app"
done


# ==================================================================
# WEBSITES
# ==================================================================

websites=(
  "https://app.youneedabudget.com"
  "https://www.facebook.com"
  "https://feedly.com"
)

open -a "Google Chrome" --args --profile-directory="Profile 3"
for website in "${websites[@]}"; do
  open "$website"
done
